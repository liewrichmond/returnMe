{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
  },
  "include": [
      "./src/**/*"
  ]
}